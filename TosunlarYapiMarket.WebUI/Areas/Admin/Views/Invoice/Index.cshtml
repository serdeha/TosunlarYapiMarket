@model List<Invoice>
@{
    ViewData["Title"] = "Faturalar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <a class="btn btn-primary text-white font-weight-bold" asp-area="Admin" asp-controller="Invoice" asp-action="Add">
        <i class="fas fa-file-invoice"></i> Fatura Ekle
    </a>
</div>

@if (Model.Count > 0)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>


    <div class="card">
        <div class="card-body">
            <h4>@(ViewBag.CustomerTitle == null ? "Faturalar" : $"{ViewBag.CustomerTitle} Müşterisinin Faturaları")</h4>
            <div class="m-t-25">
                <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12">
                        <table id="data-table" class="table dataTable" role="grid" aria-describedby="data-table_info">
                            <thead>
                                <tr>
                                    <th>Fatura Kodu</th>
                                    <th>Müşteri</th>
                                    <th>Durum</th>
                                    <th>Fatura Tarihi</th>
                                    <th>Fatura Açıklaması</th>
                                    <th>Toplam Fiyat</th>
                                    <th>İndirimli Fiyat</th>
                                    <th>Ayarlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model)
                                {
                                    <tr name="@invoice.Id">
                                        <td>@invoice.InvoiceCode</td>
                                        <td>@string.Concat(invoice.Customer?.FirstName," ",invoice.Customer?.LastName)</td>
                                        <td>
                                            @{
                                                string paidColor = invoice.IsPaid ? "success" : "danger";
                                                string paidText = invoice.IsPaid ? "Ödendi" : "Ödenmedi";
                                            }
                                            <span class="badge badge-@(paidColor)">@paidText</span>
                                        </td>
                                        <td>@invoice.InvoiceDate.ToShortDateString()</td>
                                        <td>@invoice.InvoiceDescription</td>
                                        <td>@invoice.TotalPrice ₺</td>
                                        <td>
                                            @(invoice.DiscountedTotalPrice == 0 ? "-" : $"{invoice.DiscountedTotalPrice} ₺")
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a class="btn btn-success text-white" asp-area="Admin" asp-controller="Invoice" asp-action="AddInvoiceStock" asp-route-invoiceId="@invoice.Id">
                                                    <i class="fas fa-plus"></i> Ürün Ekle
                                                </a>
                                                <a class="btn btn-secondary text-white" asp-controller="Invoice" asp-action="ShowInvoice" asp-route-invoiceId="@invoice.Id">
                                                    <i class="fas fa-file-invoice"></i> Faturayı Gör
                                                </a>
                                                <button class="btn btn-primary text-white btnDiscount" data-id="@invoice.Id" style="@(invoice.IsPaid ? "display:none":"")">
                                                    <i class="fa fa-tag"></i>  İndirim
                                                </button>
                                                <button class="btn btn-danger text-white deleteInvoice" data-id="@invoice.Id" data-title="@string.Concat(invoice.Customer?.FirstName, " ", invoice.Customer?.LastName)">
                                                    <i class="fas fa-trash-alt"></i> Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Css{
    <link href="~/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/node_modules/sweetalert2/dist/sweetalert2.css" rel="stylesheet" />
    }

    @section Scripts {
    <script src="~/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/node_modules/moment/moment.js"></script>
    <script src="~/js/invoice.js"></script>
    <script src="~/js/invoiceDiscount.js"></script>
    }
}
else
{
    <div class="alert alert-primary">
        <div class="d-flex justify-content-start">
            <span class="alert-icon m-r-20 font-size-30">
                <i class="anticon anticon-info-circle"></i>
            </span>
            <div>
                <h5 class="alert-heading">
                    Fatura bulunamadı.
                </h5>
                <p>Henüz fatura eklenmemiş veya kişinin henüz oluşturulmuş faturası bulunmuyor.</p>
            </div>
        </div>
    </div>
}
