@model Invoice
@{
    ViewBag.Title = "Fatura Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header mt-3 ml-3">
        <h4>
            <i class="fas fa-file-invoice"></i> Fatura Ekle 
        </h4>
    </div>
    <div class="card-body">

        <div id="modalPlaceHolder" aria-hidden="true"></div>


        <form id="invoiceAddForm" asp-controller="Invoice" asp-action="Add" method="post">


            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger" asp-validation-summary="All">
                </div>
            }

            <div class="form-row">
                <div class="form-group col-md-6 mt-2">
                    <label>Fatura Kodu</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-barcode"></i>
                            </span>
                        </div>
                        <input asp-for="InvoiceCode" class="form-control" id="invoiceCodeInput" readonly="readonly">
                        <span class="text-danger" asp-validation-for="InvoiceCode"></span>
                    </div>
                </div>
                <div class="form-group col-md-6 mt-2">
                    <i class="prefix-icon anticon anticon-calendar"></i> <label> Fatura Tarihi</label>
                    <input type="datetime-local" class="form-control datepicker-input" placeholder="Lütfen bir tarih seçiniz" asp-for="InvoiceDate">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6 mt-2">
                    <label>Müşteriler</label><br />
                    <select asp-for="CustomerId" asp-items="@ViewBag.CustomerList" id="customerList" class="form-control-plaintext">
                        <option selected="selected">Lütfen bir müşteri seçiniz.</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mt-2">
                    <label>Açıklama</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-envelope-open-text"></i>
                            </span>
                        </div>
                        <input asp-for="InvoiceDescription" class="form-control">
                        <span class="text-danger" asp-validation-for="InvoiceDescription"></span>
                    </div>
                </div>
            </div>
                     

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-block btn-lg" id="btnAddInvoice">
                        <i class="fas fa-plus-circle"></i> Ekle
                    </button>
                </div>
                <div class="col-md-6">
                    <a asp-area="Admin" asp-controller="Invoice" asp-action="Index" class="btn btn-danger btn-block btn-lg">
                        <i class="fas fa-times-circle"></i> Vazgeç
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>



@section Css
    {
    <link href="~/assets/vendors/select2/select2.css" rel="stylesheet">
    <link href="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="~/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/node_modules/sweetalert2/dist/sweetalert2.css" rel="stylesheet" />
}

@section Scripts
    {
    <script src="~/assets/vendors/select2/select2.min.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.tr.min.js" charset="UTF-8"></script>
    <script src="~/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/js/invoiceAdd.js"></script>
    <script src="~/js/invoiceSelectProduct.js"></script>
    }