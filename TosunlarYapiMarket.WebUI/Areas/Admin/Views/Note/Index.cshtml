@model List<Note>
@{
    ViewData["Title"] = "Notlar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="mb-2">
    <a class="btn btn-primary text-white font-weight-bold" asp-area="Admin" asp-controller="Note" asp-action="Add">
        <i class="fas fa-sticky-note"></i> Not Ekle
    </a>
</div>

@if (Model.Count > 0)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>


    <div class="card">
        <div class="card-body">
            <h4>Notlar</h4>
            <div class="m-t-25">
                <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12">
                        <table id="data-table" class="table dataTable" role="grid" aria-describedby="data-table_info">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Müşteri</th>
                                    <th>Tarih</th>
                                    <th>Ayarlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var note in Model)
                                {
                                    <tr name="@note.Id">
                                        <td>
                                            @{
                                                string? title = string.Empty;
                                                if (note.NoteTitle?.Length is 50 or >= 100)
                                                {
                                                    title = $"{note.NoteTitle.Substring(0, 30)}...";
                                                }
                                                else if (note.NoteTitle?.Length is >= 20 or >= 49)
                                                {
                                                    title = $"{title = note.NoteTitle.Substring(0, 20)}...";
                                                }
                                                else
                                                {
                                                    title = note.NoteTitle;
                                                }
                                            }
                                            @title
                                        </td>
                                        <td>@string.Concat(note.Customer?.FirstName," ",note.Customer?.LastName)</td>
                                        <td>@note.NoteDate.ToShortDateString()</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary text-white font-weight-bold" asp-area="Admin" asp-controller="Note" asp-action="Update" asp-route-noteId="@note.Id">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <a class="btn btn-secondary text-white font-weight-bold noteDetail" data-id="@note.Id">
                                                    <i class="fas fa-sticky-note"></i> Detaylar
                                                </a>
                                                <a class="btn btn-danger text-white font-weight-bold noteDelete" data-id="@note.Id" data-title="@string.Concat(note.Customer?.FirstName," ",note.Customer?.LastName)">
                                                    <i class="fas fa-trash-alt"></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Css{
    <link href="~/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/node_modules/sweetalert2/dist/sweetalert2.css" rel="stylesheet" />
    }

    @section Scripts {
    <script src="~/assets/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/js/noteIndex.js"></script>

   
    }
}
else
{
    <div class="alert alert-primary">
        <div class="d-flex justify-content-start">
            <span class="alert-icon m-r-20 font-size-30">
                <i class="anticon anticon-info-circle"></i>
            </span>
            <div>
                <h5 class="alert-heading">Not Bulunamadı!</h5>
                <p>Henüz bir not eklenmemiş.</p>
            </div>
        </div>
    </div>
}