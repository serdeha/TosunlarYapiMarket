@model Customer
@{
    ViewData["Title"] = "Müşteri Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header mt-3 ml-3">
        <h4>
            <i class="anticon anticon-user-add"></i> Müşteri Ekle
        </h4>
    </div>
    <div class="card-body">
        <form asp-controller="Customer" asp-action="Add" method="post">

            <div class="mb-3">
                <label>Müşteri NO</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-id-card-alt"></i>
                        </span>
                    </div>
                    <input asp-for="CustomerNo" class="form-control" id="customerNoInput" readonly="readonly">
                    <span class="text-danger" asp-validation-for="CustomerNo"></span>
                </div>
            </div>

            <div class="mb-3">
                <label>Ad</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-address-card"></i>
                        </span>
                    </div>
                    <input asp-for="FirstName" class="form-control" placeholder="Müşteri adını giriniz">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="mb-3">
                <label>Soyad</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-address-card"></i>
                        </span>
                    </div>
                    <input asp-for="LastName" class="form-control" placeholder="Müşteri soyadını giriniz">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="mb-3">
                <label>İş Adresi</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-building fa-2x"></i>
                        </span>
                    </div>
                    <textarea asp-for="BusinessAddress" rows="5" cols="7" class="form-control" placeholder="Müşteri iş adresini giriniz"></textarea>
                    <span class="text-danger" asp-validation-for="BusinessAddress"></span>
                </div>
            </div>
            <div class="mb-3">
                <label>Ev Adresi</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-home fa-2x"></i>
                        </span>
                    </div>
                    <textarea asp-for="HomeAddress" rows="5" cols="7" class="form-control" placeholder="Müşteri ev adresini giriniz"></textarea>
                    <span class="text-danger" asp-validation-for="HomeAddress"></span>
                </div>
            </div>
            <div class="mb-3">
                <label>Telefon Numarası</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-phone-alt"></i>
                        </span>
                    </div>
                    <input asp-for="TelephoneNumber" class="form-control" placeholder="Müşteri telefon numarasını giriniz">
                    <span class="text-danger" asp-validation-for="TelephoneNumber"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">
                        <i class="anticon anticon-user-add"></i> Ekle
                    </button>
                </div>
                <div class="col-md-6">
                    <a asp-area="Admin" asp-controller="Stock" asp-action="Index" class="btn btn-danger btn-block btn-lg">
                        <i class="anticon anticon-close-circle"></i> Vazgeç
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/assets/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/js/customer.js"></script>
}