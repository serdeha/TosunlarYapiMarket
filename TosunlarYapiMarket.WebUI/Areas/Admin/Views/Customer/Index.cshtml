@model List<Customer>
@{
    ViewData["Title"] = "Müşteriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <a class="btn btn-primary text-white font-weight-bold" asp-area="Admin" asp-controller="Customer" asp-action="Add">
        <i class="fas fa-user-alt"></i> Müşteri Ekle
    </a>
</div>

@if (Model.Count > 0)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>


    <div class="card">
        <div class="card-body">
            <h4>Müşteriler</h4>
            <div class="m-t-25">
                <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12">
                        <table id="data-table" class="table dataTable" role="grid" aria-describedby="data-table_info">
                            <thead>
                                <tr>
                                    <th>Müşteri No</th>
                                    <th>Müşteri</th>
                                    <th>Telefon</th>
                                    <th>Ayarlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr name="@customer.Id">
                                        <td>@customer.CustomerNo</td>
                                        <td>@string.Concat(customer.FirstName," ",customer.LastName)</td>
                                        <td>@customer.TelephoneNumber</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-primary text-white font-weight-bold" asp-area="Admin" asp-controller="Customer" asp-action="Update" asp-route-customerId="@customer.Id">
                                                    <i class="fas fa-edit"></i> Düzenle
                                                </a>
                                                <a class="btn btn-secondary text-white font-weight-bold customerDetail" data-id="@customer.Id">
                                                    <i class="fas fa-sticky-note"></i> Detaylar
                                                </a>
                                                <a class="btn btn-danger text-white font-weight-bold deleteCustomer" data-id="@customer.Id" data-title="@string.Concat(customer.FirstName," ",customer.LastName)">
                                                    <i class="fas fa-trash-alt"></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Css{
    <link href="~/assets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/node_modules/sweetalert2/dist/sweetalert2.css" rel="stylesheet" />
    }

    @section Scripts {
        <script src="~/assets/vendors/datatables/jquery.dataTables.min.js"></script>
        <script src="~/assets/vendors/datatables/dataTables.bootstrap.min.js"></script>
        <script src="~/node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
        <script src="~/js/customer.js"></script>

        <script type="text/javascript">
        $('#data-table').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        });
    </script>
    }
}
else
{
    <div class="alert alert-primary">
        <div class="d-flex justify-content-start">
            <span class="alert-icon m-r-20 font-size-30">
                <i class="anticon anticon-info-circle"></i>
            </span>
            <div>
                <h5 class="alert-heading">Müşteriler Bulunamadı!</h5>
                <p>Henüz bir müşteri eklenmemiş.</p>
            </div>
        </div>
    </div>
}

