@model List<PayOffDebt>

@if (Model.Count > 0)
{
    <div class="modal fade bd-example-modal-xl">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h4">
                        Yapılan Ödemeler (@ViewBag.CustomerName)
                    </h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <i class="anticon anticon-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="data-table_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="col-sm-12">
                            <table id="data-table-payment" class="table dataTable" role="grid" aria-describedby="data-table_info">
                                <thead>
                                    <tr>
                                        <th>Tarih</th>
                                        <th>Ödeme Tutarı</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var payOffDebt in Model)
                                    {
                                        <tr>
                                            <td>@payOffDebt.PaidDate</td>
                                            <td>@payOffDebt.AmountPaid ₺</td>
                                            <td>@payOffDebt.ModifiedByName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Script{
    <script type="text/javascript">
        $('#data-table-payment').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        });
    </script>
    }
}
else
{
    <div class="modal fade bd-example-modal-xl">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title h4">
                        Yapılan Ödemeler (@ViewBag.CustomerName)
                    </h6>
                    <button type="button" class="close" data-dismiss="modal">
                        <i class="anticon anticon-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    @ViewBag.CustomerName henüz borç ödemesi yapılmamış.
                </div>
            </div>
        </div>
    </div>
}
